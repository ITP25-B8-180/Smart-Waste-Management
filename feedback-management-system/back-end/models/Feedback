const mongoose = require('mongoose');

const replySchema = new mongoose.Schema({
  admin: {
    type: String,
    required: true
  },
  text: {
    type: String,
    required: true
  },
  date: {
    type: Date,
    default: Date.now
  }
});

const feedbackSchema = new mongoose.Schema({
  name: {
    type: String,
    required: true
  },
  rating: {
    type: Number,
    required: true,
    min: 1,
    max: 5
  },
  comment: {
    type: String,
    required: true
  },
  date: {
    type: Date,
    default: Date.now
  },
  replies: [replySchema]
});

module.exports = mongoose.model('Feedback', feedbackSchema);